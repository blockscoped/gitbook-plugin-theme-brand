{
  "name": "gitbook-plugin-theme-brand",
  "version": "2.0.4",
  "description": "Gitbook custom theme for SIS docs",
  "keywords": [
    "gitbook",
    "theme",
    "sis"
  ],
  "license": "GPLv3",
  "author": {
    "name": "Andrey Akulov"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/SIS-MSC/gitbook-plugin-theme-sis.git"
  },
  "bugs": {
    "url": "https://github.com/SIS-MSC/gitbook-plugin-theme-sis/issues"
  },
  "engines": {
    "gitbook": ">=3.0.0"
  },
  "gitbook": {
    "properties": {
      "langs": {
        "type": "array",
        "default": ["en"],
        "title": "List of supported languages."
      },
      "siteURL": {
        "type": "string",
        "required": true,
        "title": "Base URL of Git Repo at the tree level"
      },
      "logo": {
        "type": "string",
        "title" "Path to brand logo from root directory e.g. images/logo.png",
        "required": true
      },
      "altText": {
        "type": "string",
        "title": "Alt text for the brand logo"
      }
    }
  }
}
